<?xml version="1.0"?>
<!DOCTYPE baat SYSTEM "http://ccg.murdoch.edu.au/dtd/baat.dtd">
<baat>
  <job jobType="ccg" toolPath="/usr/local/grendel/bin/blastWrapper" toolName="ccg-blastall" displayName="ccg-blastall" description="BLAST the input files based on the options selected.">

    <inputFile/>
    <outputFile/>

    <inputFiletypes requiresInput="true" acceptsInput="true">
        <extension>fa</extension>
        <extension>fna</extension>
        <extension>faa</extension>
        <extension>gb</extension>
    </inputFiletypes>

    <outputFiletypes filePassThru="false">
        <extension>bls</extension>
    </outputFiletypes>

    <parameterList>
      <parameter rank="1" switchUse="both" switch="-p" mandatory="yes" inputFile="no"    outputFile="no"  value=""/>
      <parameter rank="2" switchUse="both" switch="-d" mandatory="yes" inputFile="no"    outputFile="no"  value=""/>
      <parameter rank="3" switchUse="both" switch="-i" mandatory="yes" inputFile="yes"   outputFile="no"  value=""/>
      <parameter rank=""  switchUse="both" switch="-V" mandatory="no"  inputFile="no"    outputFile="no"  value="T"/>
      <parameter rank=""  switchUse="both" switch="-o" mandatory="no"  inputFile="no"    outputFile="yes" value="" sourceParam="-i" appendString=".bls"/>
    </parameterList>

    <parameterAliasList/>

    <grendel/>
    <priority/>
    <executionHost/>
    <batchNumber/>
    <status/>
    <startTime/>
    <stopTime/>
    <submittedTime/>
    <submitUser/>
    <submitLabel/>
  </job>
</baat>
