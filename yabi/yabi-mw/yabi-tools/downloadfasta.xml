<?xml version="1.0"?>
<!DOCTYPE baat SYSTEM "http://ccg.murdoch.edu.au/dtd/baat.dtd">
<baat>
  <job toolPath="/usr/local/bin/downloadfasta" toolName="downloadfasta" displayName="batch select fasta" description="Read a text file containing accession numbers or GI numbers (one per line) and download the corresponding fasta records. Outputs a text file of fasta records.">

    <inputFile/>
    <outputFile/>

    <inputFiletypes requiresInput="true" acceptsInput="true">
        <extension>txt</extension>
    </inputFiletypes>

    <outputFiletypes filePassThru="false">
        <extension>fa</extension>
    </outputFiletypes>

    <parameterList>
      <parameter rank="1" switchUse="both" switch="-i" mandatory="yes" inputFile="yes" outputFile="no" value=""/>
      <parameter rank="2" switchUse="both" switch="-o" mandatory="no" inputFile="no" outputFile="no" value="downloadfasta.fa"/>
    </parameterList>

    <parameterAliasList/>

    <grendel/>
    <priority/>
    <executionHost/>
    <batchNumber/>
    <status/>
    <startTime/>
    <stopTime/>
    <submittedTime/>
    <submitUser/>
    <submitLabel/>
  </job>
</baat>
