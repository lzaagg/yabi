<?xml version="1.0"?>
<!DOCTYPE baat SYSTEM "http://ccg.murdoch.edu.au/dtd/baat.dtd">
<baat>
  <job toolPath="/usr/bin/zip" toolName="zipjob" displayName="create zip archive" description="Zip all data from all job units that have been executed into 'output.zip'.">

    <inputFile/>
    <outputFile/>

    <inputFiletypes requiresInput="true" acceptsInput="true">
        <extension>*</extension>
    </inputFiletypes>

    <outputFiletypes filePassThru="false">
        <extension>zip</extension>
    </outputFiletypes>


    <!-- use default value of . for -r, -9, -q. This tells middleware to use these params which are switchOnly -->

    <parameterList>
        <parameter rank="1" switchUse="switchOnly" switch="-r" mandatory="no" inputFile="no" outputFile="no"  value="."/>
        <parameter rank="2" switchUse="switchOnly" switch="-9" mandatory="no" inputFile="no" outputFile="no" value="."/>
        <parameter rank="3" switchUse="switchOnly" switch="-q" mandatory="no" inputFile="no" outputFile="no" value="."/>
        <parameter rank="4" switchUse="valueOnly" switch="outFile" mandatory="no" inputFile="no" outputFile="yes" value="output.zip"/>
        <parameter rank="5" switchUse="valueOnly" switch="zipDir" mandatory="no" filter="../../" inputFile="no" outputFile="no" value=""/>
    </parameterList>

    <parameterAliasList/>

    <grendel/>
    <priority/>
    <executionHost/>
    <batchNumber/>
    <status/>
    <startTime/>
    <stopTime/>
    <submittedTime/>
    <submitUser/>
    <submitLabel/>
  </job>
</baat>
