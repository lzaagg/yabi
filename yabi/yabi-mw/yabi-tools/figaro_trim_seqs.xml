<?xml version="1.0"?>
<!DOCTYPE baat SYSTEM "http://ccg.murdoch.edu.au/dtd/baat.dtd">
<baat>
  <job toolPath="/usr/local/grendel/bin/figaro_trim_seqsWrapper" toolName="figaro_trim_seqs" displayName="figaro_trim_seqs" description="trims a set of reads and quality values, outputting a 
set of clean reads and quality values">

    <inputFile/>
    <outputFile/>

    <inputFiletypes requiresInput="true" acceptsInput="true">
        <extension>seq</extension>
        <extension>qul</extension>
        <extension>vectorcuts</extension>
    </inputFiletypes>

    <outputFiletypes filePassThru="false">
        <extension mustExist="true">fasta</extension>
        <extension mustExist="true">qual</extension>
    </outputFiletypes>

    <parameterList>
      <parameter rank=""  switchUse="both" switch="-o" mandatory="yes" inputFile="no"  outputFile="no"  value="" />
      <parameter rank=""  switchUse="both" switch="-c" mandatory="yes" inputFile="yes" outputFile="no"  value="" >
        <acceptedExtensionList>
            <acceptedExtension>vectorcuts</acceptedExtension>
        </acceptedExtensionList>
      </parameter>
      <parameter rank=""  switchUse="both" switch="-f" mandatory="yes" inputFile="yes" outputFile="no"  value="" >
        <acceptedExtensionList>
            <acceptedExtension>seq</acceptedExtension>
        </acceptedExtensionList>
      </parameter>
      <parameter rank=""  switchUse="both" switch="-q" mandatory="yes" inputFile="yes" outputFile="no"  value="" >
        <acceptedExtensionList>
            <acceptedExtension>qul</acceptedExtension>
            <acceptedExtension>qual</acceptedExtension>
        </acceptedExtensionList>
      </parameter>
      <parameter rank=""  switchUse="both" switch="-m" mandatory="no"  inputFile="no"  outputFile="no"  value="" />
    </parameterList>

    <parameterAliasList/>

    <grendel/>
    <priority/>
    <executionHost/>
    <batchNumber/>
    <status/>
    <startTime/>
    <stopTime/>
    <submittedTime/>
    <submitUser/>
    <submitLabel/>
  </job>
</baat>
