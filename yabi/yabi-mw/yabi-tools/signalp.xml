<?xml version="1.0"?>
<!DOCTYPE baat SYSTEM "http://ccg.murdoch.edu.au/dtd/baat.dtd">
<baat>
  <job toolPath="/usr/local/grendel/bin/signalpWrapper" toolName="signalp" displayName="signalp" description="Prediction of signal peptide cleavage sites">

    <inputFile/>
    <outputFile/>

    <inputFiletypes requiresInput="true" acceptsInput="true">
        <extension>fa</extension>
        <extension>seq</extension>
        <extension>fna</extension>
        <extension>faa</extension>
    </inputFiletypes>

    <outputFiletypes filePassThru="false">
        <extension>txt</extension>
    </outputFiletypes>

    <parameterList>
      <parameter rank="1" switchUse="valueOnly"  switch="notUsed"  mandatory="yes" inputFile="yes" value="" />
      <parameter rank=""  switchUse="both"       switch="-t"       mandatory="yes" inputFile="no"  value="" />
      <parameter rank=""  switchUse="both"       switch="-f"       mandatory="no"  inputFile="no"  value="" />
      <parameter rank=""  switchUse="both"       switch="-graphic" mandatory="no"  inputFile="no"  value="" />
      <parameter rank=""  switchUse="switchOnly" switch="-k"       mandatory="no"  inputFile="no"  value="" />
      <parameter rank=""  switchUse="both"       switch="-m"       mandatory="no"  inputFile="no"  value="" />
      <parameter rank=""  switchUse="switchOnly" switch="-q"       mandatory="no"  inputFile="no"  value="" />
      <parameter rank=""  switchUse="both"       switch="-synver"  mandatory="no"  inputFile="no"  value="" />
      <parameter rank=""  switchUse="both"       switch="-trunc"   mandatory="no"  inputFile="no"  value="" />
    </parameterList>

    <parameterAliasList>
      <parameterAlias switchAlias="-g"       switch="-graphics" switchValue="ps"    />
      <parameterAlias switchAlias="-short"   switch="-format"   switchValue="short" />
      <parameterAlias switchAlias="-keepall" switch="-k"        switchValue=""      />
      <parameterAlias switchAlias="-quiet"   switch="-q"        switchValue=""      />
    </parameterAliasList>

    <grendel/>
    <priority/>
    <executionHost/>
    <batchNumber/>
    <status/>
    <startTime/>
    <stopTime/>
    <submittedTime/>
    <submitUser/>
    <submitLabel/>
  </job>
</baat>
