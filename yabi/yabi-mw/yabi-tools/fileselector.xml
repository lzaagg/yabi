<?xml version="1.0"?>
<!DOCTYPE baat SYSTEM "http://ccg.murdoch.edu.au/dtd/baat.dtd">
<baat>
  <job toolPath="cp" toolName="fileselector" displayName="select file" description="Select a file from your workspace directory.">

    <inputFile/>
    <outputFile/>

    <inputFiletypes requiresInput="false" acceptsInput="false">
        <extension>*</extension>
    </inputFiletypes>

    <outputFiletypes filePassThru="false">
        <extension>*</extension>
    </outputFiletypes>

    <parameterList>
        <parameter rank="1" switchUse="valueOnly" switch="files" mandatory="yes" inputFile="no" filter="prependUserDir" outputFile="no"  value=""/>
        <parameter rank="2" switchUse="valueOnly" switch="destination" mandatory="no" inputFile="no" outputFile="no" value="."/>
    </parameterList>

    <parameterAliasList/>

    <grendel/>
    <priority/>
    <executionHost/>
    <batchNumber/>
    <status/>
    <startTime/>
    <stopTime/>
    <submittedTime/>
    <submitUser/>
    <submitLabel/>
  </job>
</baat>

