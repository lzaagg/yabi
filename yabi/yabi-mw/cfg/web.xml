<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <display-name>JBPM Examples</display-name>
    <description>
      JBPM Example JSPs
    </description>

  <!-- JbpmThreadsServlet -->
  <servlet>
    <servlet-name>JbpmThreadsServlet</servlet-name>
    <servlet-class>org.jbpm.web.JbpmThreadsServlet</servlet-class>
    <init-param>
      <param-name>jbpm.configuration.resource</param-name>
      <param-value>@jbpmconfigfile@</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>JbpmThreadsServlet</servlet-name>
    <url-pattern>/threads</url-pattern>
  </servlet-mapping> 

    <resource-ref>
      <res-ref-name>mail/Session</res-ref-name>
      <res-type>javax.mail.Session</res-type>
      <res-auth>Container</res-auth>
    </resource-ref>

</web-app>
