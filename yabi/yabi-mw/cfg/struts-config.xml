<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

    <form-beans>
    </form-beans>

    <global-exceptions>
    </global-exceptions>

    <global-forwards>
        <forward name="error" path="/templates/error.xml"/>
    </global-forwards>

    <action-mappings>

        <action path="/welcome" forward="/templates/definitions.xml"/>

        <action 
            path="/definitions"
            type="au.edu.murdoch.ccg.yabi.webservice.actions.DefinitionsList">
            <forward name="success" path="/templates/definitions.xml"/>
        </action>

        <action
            path="/instances"
            type="au.edu.murdoch.ccg.yabi.webservice.actions.InstancesList">
            <forward name="success" path="/templates/instances.xml"/>
        </action>

        <action
            path="/instance"
            type="au.edu.murdoch.ccg.yabi.webservice.actions.ViewInstance">
            <forward name="success" path="/templates/instance.xml"/>
        </action>

        <action
            path="/deploy"
            type="au.edu.murdoch.ccg.yabi.webservice.actions.DeployDefinition">
            <forward name="success" path="/templates/deployed.xml"/>
        </action>

    </action-mappings>

    <message-resources parameter="MessageResources" />

</struts-config>
