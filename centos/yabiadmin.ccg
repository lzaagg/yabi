
WSGISocketPrefix run/wsgi
WSGIDaemonProcess yabi processes=2 threads=15 display-name=%{GROUP}

<VirtualHost *:80>
  DocumentRoot /var/www/html
  ServerName localhost.localdomain
  ErrorLog logs/yabi.error_log
  CustomLog logs/yabi.access_log combined
  RewriteLogLevel 3
  RewriteLog logs/yabi.rewrite_log

  <Directory "/var/www/html">
    Options Indexes FollowSymLinks
    AllowOverride All
    Order allow,deny
    Allow from all
  </Directory>

    <Location /yabi>
    WSGIProcessGroup yabi
    </Location>
      Alias /yabi/static /usr/local/webapps/yabiadmin/static
      Alias /yabi/images /usr/local/webapps/yabiadmin/static/images
      WSGIScriptAlias /yabi /usr/local/webapps/yabiadmin/django.wsgi

</VirtualHost>

<VirtualHost *:443>
  DocumentRoot /var/www/html
  ServerName localhost.localdomain:443
  ErrorLog logs/yabi.ssl_error_log
  TransferLog logs/yabi.ssl_access_log
  
  SSLEngine on

  # From other config
  #SSLProtocol all -SSLv2
  #SSLCipherSuite ALL:!ADH:!EXPORT:!SSLv2:RC4+RSA:+HIGH:+MEDIUM:+LOW

  SSLCipherSuite ALL:!ADH:!EXPORT56:RC4+RSA:+HIGH:+MEDIUM:+LOW:+SSLv2:+EXP:+eNULL
  SSLCertificateFile /etc/pki/tls/certs/localhost.crt
  SSLCertificateKeyFile /etc/pki/tls/private/localhost.key

  SetEnvIf User-Agent ".*MSIE.*" \
         nokeepalive ssl-unclean-shutdown \
         downgrade-1.0 force-response-1.0

  CustomLog /etc/httpd/logs/ssl_request_log \
          "%t %h %{SSL_PROTOCOL}x %{SSL_CIPHER}x \"%r\" %b"

    <Location /yabi>
    WSGIProcessGroup yabi
    </Location>
      Alias /yabi/static /usr/local/webapps/yabiadmin/static
      Alias /yabi/images /usr/local/webapps/yabiadmin/static/images
      WSGIScriptAlias /yabi /usr/local/webapps/yabiadmin/django.wsgi
</VirtualHost>
